@{
    ViewData["Title"] = "Home Page";
}
<div>

    @{ if(ViewBag.errors!=null){
        foreach(var error in ViewBag.errors)
                {
                    //If there are any errors for a field...
                    if(@error["Errors"].Count > 0)
                    {
                        // We show the first error for that field
                        <p>@error["Errors"][0]["ErrorMessage"]</p>
                    }
                }
    }
    }
    <div id="main" style="display: flex;">
        <div class="trails">
            <h1>Register</h1>
            @model connectingToDBTESTING.Models.User
            <form action="/register" method="post">
                <p>FIrst Name: <input type="text" name="FirstName"></p>
                <p>Last Name: <input type="text" name="LastName"></p>
                <p>Email: <input type="text" name="Email"></p>
                <p>Password: <input type="text" name="Password"></p>
                <p>Password Confirmation: <input type="text" name="ConPassword"></p>
                <input type="submit" value="Register">
                
            </form>
            <br>
        </div>
        <div style="margin-top: 60px;">
            <form action="/logining" method="post">
                <p>Email: <input type="text" name="email"></p>
                <p>Password: <input type="text" name="password"></p>
                <input type="submit" value="Login">
                
            </form>
            @{ if(ViewBag.err!=null){
                    <p style="color: red;">@ViewBag.err</p>
                }
                }
        </div>
    </div>  
</div>
